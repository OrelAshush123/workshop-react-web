  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload"],
      "cwd": "${workspaceFolder}/backend",
      "python": "${command:python.interpreterPath}",
      "envFile": "${workspaceFolder}/.env",
      "jinja": true,
      "justMyCode": true
    },
    {
      "type": "node-terminal",
      "name": "Nodejs: WebApp",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}/frontend"
    }
  ]
}
